<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#15202B"
    tools:context=".SetUpProfile_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/imgView_appName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Setup Profile"
                    android:textColor="@color/white"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/arrowback_ic" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/txtView_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Photo Profile"
                    android:textColor="@color/white"
                    android:layout_marginStart="40dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_PFP"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/txtView_upload"
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profilepic_icon" />

                <ImageView
                    android:id="@+id/btn_upload"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@+id/img_PFP"
                    android:src="@drawable/upload_btn" />

            </RelativeLayout>

            <EditText
                android:id="@+id/editTxt_username"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:hint="Username"
                android:padding="10dp"
                android:textColorHint="#AAB8C2"
                android:textColor="#F5F8FA"
                android:background="@drawable/custom_input"
                android:textSize="14sp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/editTxt_email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:hint="Email"
                android:padding="10dp"
                android:textColorHint="#AAB8C2"
                android:textColor="#F5F8FA"
                android:background="@drawable/custom_input"
                android:textSize="14sp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/editTxt_bio"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:hint="Bio"
                android:gravity="start"
                android:padding="10dp"
                android:textColorHint="#AAB8C2"
                android:textColor="#F5F8FA"
                android:background="@drawable/custom_input"
                android:textSize="14sp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:padding="10dp"
                android:text="Submit"
                android:backgroundTint="#1D9BF0"
                android:textAllCaps="false"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>