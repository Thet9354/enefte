<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startscreen_bg"
    android:orientation="vertical"
    tools:context=".StartScreen_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All NFTs are \ncertifiably unique \nand ownable"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="34sp"
                android:layout_gravity="center_horizontal"
                android:gravity="start"
                android:padding="23dp"
                android:layout_marginTop="300dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A credible and excellent marketplace for \nnon-fungible token."
                android:textColor="#AAB8C2"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="-10dp"
                android:textSize="14sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_connectWallet"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#1D9BF0"
                    android:text="Connect with Wallet"
                    android:textAllCaps="false" />

                <ImageView
                    android:id="@+id/btn_next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_toRightOf="@+id/btn_connectWallet"
                    android:src="@drawable/forward_arrow" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>